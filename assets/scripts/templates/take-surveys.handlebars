<div class="row">
{{#each surveys as |survey|}}
  {{log survey}}
<div class="col-6 mt-5">
  <section class="survey-info" data-id="{{survey._id}}">
    <form class="take-survey-form">
      <h3>{{survey.title}}</h3>
      <div class="form-check">
        <p><input class="form-check-input" type="radio" value="{{survey.option1}}" name="answer" id="response1-{{survey._id}}">
          <label class="form-check-label" for="defaultCheck1" data-name="{{survey.option1}}">
            {{survey.option1}}
          </label></p>
      </div>
      <div class="form-check">
        <p><input class="form-check-input" type="radio" value="{{survey.option2}}" name="answer" id="response2-{{survey._id}}">
          <label class="form-check-label" for="defaultCheck1" data-name="{{survey.option2}}">
            {{survey.option2}}
          </label></p>
      </div>
      <div class="form-check">
        <p><input class="form-check-input" type="radio" value="{{survey.option3}}" name="answer" id="response3-{{survey._id}}">
          <label class="form-check-label" for="defaultCheck1" data-name="{{survey.option3}}">
            {{survey.option3}}
          </label></p>
      </div>
      <div class="form-check">
        <p><input class="form-check-input" type="radio" value="{{survey.option4}}" name="answer" id="response4-{{survey._id}}">
          <label class="form-check-label" for="defaultCheck1" data-name="{{survey.option4}}">
            {{survey.option4}}
          </label></p>
      </div>
      <div class="form-check">
        <p><input class="form-check-input" type="radio" value="{{survey.option5}}" name="answer" id="response5-{{survey._id}}">
          <label class="form-check-label" for="defaultCheck1" data-name="{{survey.option5}}">
            {{survey.option5}}
          </label></p>
      </div>
      <p><button type="submit" class="btn btn-info">Submit Response</button>
        </button>
        <button class="view-survey-results-button btn btn-info" type="button" data-target="#modal-{{survey._id}}">
          View Results
        </button>
        <button type="button" class="btn btn-info edit-survey-button" data-toggle="modal" data-target="#modal-{{survey._id}}" data-owner="{{survey.owner}}">
          Edit
        </button>
        <button class="delete-survey-button btn btn-info submit remove" type="button" data-owner="{{survey.owner}}">Delete</button></p>
        <div id="result-display" class="take-survey-form-{{survey._id}}"></div>
    </form>

    <div data-backdrop="true" class="modal fade update-modal" id="modal-{{survey._id}}" tabindex="-1" role="dialog" aria-labelledby="updateQuoteModalCenterTitle" aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="modal-title-{{survey._id}}">Update Survey</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form class="update-survey-form">
              <label>Survey Title:</label>
              <input name="survey[title]" type="text" value="{{survey.title}}" class="form-control"><br>
              <label>Option 1:</label>
              <input name="survey[option1]" type="text" value="{{survey.option1}}" class="form-control"><br>
              <label>Option 2:</label>
              <input name="survey[option2]" type="text" value="{{survey.option2}}" class="form-control"><br>
              <label>Option 3:</label>
              <input name="survey[option3]" type="text" value="{{survey.option3}}" class="form-control"><br>
              <label>Option 4:</label>
              <input name="survey[option4]" type="text" value="{{survey.option4}}" class="form-control"><br>
              <label>Option 5:</label>
              <input name="survey[option5]" type="text" value="{{survey.option5}}" class="form-control"><br>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>
{{/each}}
</div>
